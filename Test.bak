FROM continuumio/anaconda3:latest

USER root

RUN apt-get update && apt-get install git -y

RUN apt-get install openjdk-11-jdk -y

RUN pip install git+https://github.com/EBjerrum/molvecgen

RUN conda install -c conda-forge/label/main openbabel -y

RUN git clone https://github.com/hcji/PyFingerprint.git

WORKDIR /home/jovyan/PyFingerprint

RUN conda install -c rdkit -c anaconda -c conda-forge -c defaults cudatoolkit cudnn tensorflow-gpu rdkit faiss

RUN pip install .

RUN conda install -c mcs07 pubchempy

WORKDIR /home/jovyan/work